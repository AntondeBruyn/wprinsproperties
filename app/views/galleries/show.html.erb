<div id="gallery">
  <div class="page-header">
    <h1><%= @property.name %></h1>
  </div>

  <div class="page-header">
    <h2><%= @gallery.name %></h2>

    <ul class="actions">
      <li><%= link_to "Edit Gallery", [:edit, @property, @gallery],
        class: "edit" %></li>
      <li><%= link_to "Delete Gallery", [@property, @gallery], method: :delete,
        data: { confirm: "Are you sure you want to delete this gallery?"},
        class: "delete" %></li>
    </ul>
  </div>

  <%= simple_format(@gallery.name) %>
</div>
