<div class="page-header">
  <h1><%= @property.name %></h1>

  <ul class="actions">
    <%= link_to "Edit Property",
        edit_property_path(@property),
        class: "edit" %>

    <%= link_to "Delete Property",
        property_path(@property),
        method: :delete,
        data: { confirm:
                  "Are you sure you want to delete this property?"
              },
        class: "delete" %>
  </ul>
</div>
